<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p[:body]%></td>
        <td><%= link_to 'Show', post_path(p[:id]) %></td>
        <td><%= link_to 'Edit', edit_post_path(p[:id]) %></td>
        <td><%= link_to 'Destroy', post_path(p[:id]), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
